{
	"name": "hyperbeam-discord-bot",
	"version": "1.0.0",
	"description": "A Discord bot utilizing the Hyperbeam API",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"start": "pm2 start ./pm2.config.js",
		"bot": "pnpm run db:update && pnpm run bot:build && pnpm run bot:launch",
		"bot:nodb": "pnpm run bot:build && pnpm run bot:launch",
		"client": "pnpm run client:build && pnpm run client:serve",
		"listcommands": "slash-up local",
		"bot:build": "rimraf ./dist/bot && tsc --project ./bot",
		"bot:launch": "cd dist/bot && node index.js",
		"lint": "eslint . --ignore-path .gitignore",
		"lint:fix": "eslint . --ignore-path .gitignore --fix",
		"format": "prettier --plugin-search-dir=. --write **/*.{ts,js,json,svelte,css,scss,html} --ignore-path .gitignore",
		"client:dev": "vite",
		"client:build": "vite build",
		"client:preview": "vite preview",
		"client:serve": "dotenv -e .env -- cross-var sirv -s -p %VITE_CLIENT_PORT% dist/client",
		"envtypes": "pnpm exec dotenv-types-generator --file ./.env",
		"db:migrate": "pnpm exec prisma migrate dev && pnpm exec prisma generate",
		"db:update": "pnpm exec prisma migrate deploy && pnpm exec prisma generate"
	},
	"dependencies": {
		"@hyperbeam/web": "^0.0.15",
		"@prisma/client": "^4.3.1",
		"@sveltejs/vite-plugin-svelte": "^1.0.4",
		"better-sqlite3": "^7.6.2",
		"cors": "^2.8.5",
		"cross-var": "^1.1.0",
		"discord-oauth2": "^2.10.0",
		"discord.js": "^14.3.0",
		"dotenv": "^16.0.2",
		"dotenv-cli": "^6.0.0",
		"express": "^4.18.1",
		"express-session": "^1.17.3",
		"jsonwebtoken": "^8.5.1",
		"memorystore": "^1.6.7",
		"morgan": "^1.10.0",
		"nanoid": "3.3.4",
		"node-fetch": "^2.6.7",
		"sass": "^1.54.8",
		"sirv-cli": "^2.0.2",
		"slash-create": "^5.8.0",
		"socket.io": "^4.5.2",
		"socket.io-client": "^4.5.2",
		"svelte": "^3.50.0",
		"svelte-check": "^2.9.0",
		"svelte-navigator": "^3.2.2",
		"svelte-preprocess": "^4.10.7",
		"vite": "^3.0.9"
	},
	"devDependencies": {
		"@tsconfig/svelte": "^3.0.0",
		"@types/better-sqlite3": "^7.6.0",
		"@types/body-parser": "^1.19.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-session": "^1.17.5",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.45",
		"@types/node-fetch": "~2.6.2",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"dotenv-types-generator": "^1.1.2",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-svelte": "^2.7.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^4.3.1",
		"rimraf": "^3.0.2",
		"slash-up": "^1.2.0",
		"svelte-eslint-parser": "^0.18.1",
		"tslib": "^2.4.0",
		"typescript": "4.7.4"
	},
	"prisma": {
		"schema": "bot/prisma/schema.prisma"
	}
}
