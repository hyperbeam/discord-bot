{
	"name": "hyperbeam-discord-bot",
	"version": "1.0.0",
	"description": "A template for slash-create",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"start": "pm2 start ./pm2.config.js",
		"bot": "pnpm run db:update && pnpm run build:bot && pnpm run launch:bot",
		"client": "pnpm run build:client && pnpm run preview:client",
		"listcommands": "slash-up local",
		"build:bot": "tsc --project tsconfig.bot.json",
		"launch:bot": "cd dist/bot && node index.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"launch:client": "vite",
		"build:client": "vite build",
		"preview:client": "vite preview",
		"envtypes": "pnpm exec dotenv-types-generator --file ./.env",
		"db:migrate": "pnpm exec prisma migrate dev && pnpm exec prisma generate",
		"db:update": "pnpm exec prisma migrate deploy && pnpm exec prisma generate"
	},
	"dependencies": {
		"@hyperbeam/web": "^0.0.15",
		"@prisma/client": "^4.1.1",
		"@sveltejs/vite-plugin-svelte": "^1.0.1",
		"@tsconfig/svelte": "^3.0.0",
		"better-sqlite3": "^7.6.2",
		"body-parser": "^1.20.0",
		"discord-oauth2": "^2.10.0",
		"discord.js": "^13.9.2",
		"dotenv": "^16.0.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"express": "^4.18.1",
		"express-session": "^1.17.3",
		"jsonwebtoken": "^8.5.1",
		"morgan": "^1.10.0",
		"nanoid": "3.3.4",
		"node-fetch": "^2.6.7",
		"slash-create": "^5.7.1",
		"socket.io": "^4.5.1",
		"socket.io-client": "^4.5.1",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.0",
		"svelte-navigator": "^3.1.6",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"vite": "^3.0.4"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.5.0",
		"@types/body-parser": "^1.19.2",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.45",
		"@types/node-fetch": "~2.6.2",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"dotenv-types-generator": "^1.1.2",
		"eslint": "^8.20.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"prisma": "^4.1.1",
		"slash-up": "^1.2.0",
		"typescript": "^4.7.4",
		"vite-plugin-mkcert": "^1.9.0"
	},
	"prisma": {
		"schema": "bot/prisma/schema.prisma"
	}
}