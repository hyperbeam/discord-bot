{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"target": "ESNext",
		"module": "ESNext",
		"isolatedModules": true,
		"sourceMap": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"outDir": "../dist/client",
		"rootDirs": ["./", "../shared"]
	},
	"include": ["./**/*.ts", "./**/*.d.ts", "./**/*.svelte", "../shared/*.ts", "../shared/*.d.ts"]
}
