{
	"compilerOptions": {
		"outDir": "dist/client",
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"isolatedModules": true,
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": [
		"./client",
		"./client/**/*.ts",
		"./client/**/*.d.ts",
		"./client/**/*.svelte",
	],
}